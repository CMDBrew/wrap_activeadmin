# encoding: utf-8

# Uploader For Avatars
class CbStem::AvatarUploader < ApplicationUploader

  def default_url
    ActionController::Base.helpers.asset_path('fallback/avatar.jpg')
  end

  version :thumb do
    process resize_to_fit: [256, 256]
  end

  version :medium do
    process resize_to_fit: [512, 512]
  end

  version :large do
    process resize_to_fit: [1024, 1024]
  end

  ## Mobile version
  version :mobile do
    process resize_to_fit: [300, 300]
  end

  # Tablet version
  version :tablet do
    process resize_to_fit: [600, 600]
  end

  # Desktop version
  version :desktop do
    process resize_to_fit: [800, 800]
  end

  def extension_white_list
    %w[jpg jpeg gif png]
  end

end
