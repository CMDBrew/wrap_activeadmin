# Decorates Admin::<%= class_name %>
class Admin::<%= class_name %>Decorator < ApplicationDecorator

  decorates :<%= class_name.underscore %>

  def full_name_with_link
    link_to full_name, [:edit, :admin, object]
  end

  def avatar
    blob(object, image_size: 'medium', blob_size: 'md', name: 'avatar')
  end

end
