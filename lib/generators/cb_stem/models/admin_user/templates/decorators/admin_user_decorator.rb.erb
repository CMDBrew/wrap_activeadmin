# Decorates <%= class_name %> for AA
class Admin::<%= class_name %>Decorator < ApplicationDecorator

  decorates :<%= class_name.underscore %>

  def identifier
    table_item_identifier(
      full_name, [:admin, object],
      object,
      image: 'avatar',
      options: { class: 'mr-2', icon: 'single-02' }
    )
  end

  def avatar(*args)
    options = args.extract_options!
    thumbnail(object, 'avatar', options)
  end

end
