class <%= class_name %> < ApplicationRecord

  acts_as_list scope: %i[members_only]

  validates :question, presence: true

  belongs_to :<%= class_name.underscore %>_category
  accepts_nested_attributes_for :<%= class_name.underscore %>_category,
                                reject_if: :all_blank

  scope :publics,       -> { where(members_only: false) }
  scope :members_onlys, -> { where(members_only: true) }

  def display_name
    question.truncate(20)
  end

end
