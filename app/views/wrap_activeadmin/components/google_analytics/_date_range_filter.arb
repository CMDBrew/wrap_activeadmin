active_admin_form_for date_range_filter, url: url, method: :get do |f|
  ul class: 'list-unstyled mt-3 d-flex flex-row align-items-end' do
    f.input :filter_type,
            as: :hidden,
            input_html: { value: 'custom' }
    f.input :from,
            wrapper_html: { class: 'mb-0 mr-2' },
            input_html: {
              class: 'datepicker form-control',
              data: {
                'datepicker-options': { format: 'mm/dd/yyyy' }
              }
            }
    f.input :to,
            wrapper_html: { class: 'mb-0 mr-2' },
            input_html: {
              class: 'datepicker form-control',
              data: {
                'datepicker-options': { format: 'mm/dd/yyyy' }
              }
            }
    f.action :submit,
             label: t('.submit'),
             wrapper_html: { class: 'mb-0' },
             button_html: { class: 'btn btn-light' }
  end
end
