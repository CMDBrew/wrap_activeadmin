<% content_for :title do %>
  <h3 class='mb-4 display-3 text-center'>
    <%= title t('active_admin.devise.change_password.title') %>
  </h3>
<% end %>

<div id="login">

  <%= devise_error_messages! %>
  <%= active_admin_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    f.inputs card: false do
      f.input :password,
              input_html: {
                class: 'form-control form-control-lg'
              }
      f.input :password_confirmation,
              input_html: {
                class: 'form-control form-control-lg'
              }
      f.input :reset_password_token,
              as: :hidden,
              input_html: { value: resource.reset_password_token }
    end
    f.actions do
      f.action :submit, label: t('active_admin.devise.change_password.submit'),
               button_html: {
                 value: t('active_admin.devise.change_password.submit') ,
                 class: 'btn-lg btn-block'
               }
    end
  end
  %>
</div>
